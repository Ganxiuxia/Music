.playlist-container{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}
.img{
  width: 100%;
  height: 100%;
}
.com-title,.hotList-title{
  display: block;
  height:70rpx;
  width:100%;
  font-size:32rpx;
  text-align:left;
  line-height: 60rpx;
}
.com-title::before,.hotList-title::before{
  content:"|";
  color:#ff2d55;
  width:14rpx;
  display:inline-block;
  margin-left:10rpx;
}